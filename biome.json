{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "**/*.css",
      "**/*.md"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.cache/**",
      "!**/public/assets/**",
      "!**/dist/**",
      "!**/.vscode/**",
      "!**/.roo/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.cache/**",
      "!**/public/assets/**",
      "!**/dist/**",
      "!**/.vscode/**",
      "!**/.roo/**"
    ]
  }
}
