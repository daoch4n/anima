{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@visuals/*": ["visuals/*"],
      "@shared/*": ["shared/*"],
      "@tests/*": ["tests/*"],
      "@live2d/*": ["live2d/*"]
    },
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["mocha", "chai", "vite/client"]
  },
  "include": [
    "app",
    "components",
    "features",
    "services",
    "store",
    "visuals",
    "shared",
    "tests",
    "live2d"
  ],
  "exclude": ["vite.config.ts", "node_modules"]
}
